<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
           "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team1.project.dao.FileTokenDAO">

	<insert id="insert">
		insert into file_token (
			 token
		) values (
			 #{token}
		) 
	</insert>
	
	<update id="updateStatus">
		update file_token set
			 status = #{status}
		where token = #{token}
	</update>

	<select id="listToken" resultType="com.team1.project.dto.FileTokenDTO">
		<!--  현재 시간 기준으로 10분전에 추가되고 사용중이 아닌 것을 얻는다 -->
		<![CDATA[
			SELECT  
				 token 
			FROM  file_token 
			where status = 0 and make_date < DATE_ADD(now(), INTERVAL -10 MINUTE)
		]]>
	</select>

	<delete id="deletes">
		delete from file_token
		where  token in 
		<foreach collection="list" item="item" open="(" separator="," close=")">
			#{item.token} 
		</foreach>
	</delete>
	
	<delete id="deleteByToken">
		delete from file_token  
		where token=#{token} 
	</delete>

</mapper>